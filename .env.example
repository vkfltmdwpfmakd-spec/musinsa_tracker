# 데이터베이스 연결
DATABASE_URL=postgresql://user:password@db:5432/musinsa_db

# JWT 보안 설정 (32자 이상의 키 필요)
JWT_SECRET_KEY=

# API 키 인증
API_KEY=

# 환경 설정
ENVIRONMENT=development

# 허용된 호스트 (프로덕션에서는 실제 도메인으로 변경)
ALLOWED_HOSTS=localhost,127.0.0.1

# 크롤링 설정
CRAWL_DELAY_SECONDS=2
MAX_CONCURRENT_CRAWLERS=5

# 로그 레벨
LOG_LEVEL=INFO

# 스케줄러 설정
SCHEDULER_TIMEZONE=Asia/Seoul
PRICE_UPDATE_INTERVAL_HOURS=1
NEW_PRODUCT_DISCOVERY_INTERVAL_HOURS=6
DATA_CLEANUP_HOUR=3